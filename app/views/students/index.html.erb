	

	<div class="row">
		<div class="col-sm-6 pull-right"> 
			<button class="btn btn-success circle pull-right" > <i class="fa fa-plus fa-2x"></i></button>
		</div>
		<div class="col-sm-6">
			<h3>Users List</h3>
		</div>
	</div>
	
	<hr>
	<div class="table-responsive">
		<table class="table table-hover">
		  <thead>
		  	<tr class="text-center">
		  		<th>#</th>
		  		<th>Name</th>
		  		<th>Email</th>
					<th>Phone</th>	  		
		  		<th>Date of Birth</th>
		  		<th>City</th>
		  		<th>Country</th>
		  		<th colspan="2">Actions</th>	  		
		  	</tr>
		  </thead>
		  <tbody>
		  	<% @users.each_with_index do |user, index| %>
		  	<tr>
		  		<td><%= index+1 %></td>
		  		<td><%= link_to user.name, student_path(user.id) %></td>
		  		<td><%= user.email %></td>
		  		<td><%= user.phone %></td>
		  		<td><%= user.dob %></td>
		  		<td><%= user.city %></td>
		  		<td><%= user.country %></td>
		  		<td><%= link_to "Edit", students_path, class: "btn btn-primary btn-xs" %></td>
		  		<td><%= link_to "Delete", student_path(user.id), method: :delete, class: "btn btn-danger btn-xs" %></td>
		  	</tr>
		  	<% end %>
		  </tbody>
		</table>
	</div>